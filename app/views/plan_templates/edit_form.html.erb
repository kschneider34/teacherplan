<h1>
  Edit plan #<%= @plan.id %>
</h1>

<hr>

<form action="/update_plan/<%= @plan.id %>" method="post">

  <div class="form-group">
    <label for="plan_description">
      Plan description
    </label>

    <input type="text" id="plan_description" name="plan_description" class="form-control" value="<%= @plan.plan_description %>">
  </div>

  <div class="form-group">
    <label for="plan_owner_id">
      Plan owner
    </label>

    <%= select_tag(:plan_owner_id, options_from_collection_for_select(Teacher.all, :id, :name, @plan.plan_owner_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="coach_id">
      Coach
    </label>

    <input type="text" id="coach_id" name="coach_id" class="form-control" value="<%= @plan.coach_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update plan
  </button>
</form>

<hr>

<a href="/plans">
  Go back
</a>
