<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All teachers
    </h1>

    <a href="/teachers/new" class="btn btn-block btn-outline-secondary">
      Add a new teacher
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @teachers.each do |teacher| %>
      <tr>
        <td>
          <%= teacher.id %>
        </td>

        <td>
          <%= teacher.email %>
        </td>

        <td>
          <%= teacher.password %>
        </td>

        <td>
          <%= teacher.name %>
        </td>

        <td>
          <%= time_ago_in_words(teacher.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(teacher.updated_at) %> ago
        </td>

        <td>
          <a href="/teachers/<%= teacher.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @teachers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
